<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <a class="btn btn-outline.primary dropdown-toggle"
        href=""
        role="button"
        id="selectorIdioma"
        data-toggle="true">
        {{ idioma_actual }}
    </a>

    <div class="dropdown-menu" aria-labelledby="selectorIdioma">
        {% for lenguaje, nombre_lenguaje in listado_idiomas %}
           <form action="{{
            path(
                'app_language',
                {
                    '_locale': lenguaje,
                }
            )
        }}" method="post">
        <input type="hidden" name="ruta" value="{{ ruta }}"/>
        <button type="submit"
        class="btn drowundon-item" {{idioma_actual == lenguaje ? 'active'}}>
            {{ nombre_lenguaje }}
        </button>
        
        {% endfor %}
    </div>

  </div>
